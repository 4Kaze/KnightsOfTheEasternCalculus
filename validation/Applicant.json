{
   "type":"object",
   "required" : [ "aboutMe", "address", "city", "dateOfBirth", "email", "experiences", "firstName", "lastName", "phoneNumber", "photoUrl", "postalCode", "universities", "id"],
   "properties":{
      "aboutMe":{
         "type":"string"
      },
      "address":{
         "type":"string",
         "minLength": 1
      },
      "city":{
         "type":"string",
         "minLength": 1
      },
      "dateOfBirth":{
         "type":"string",
         "pattern": "[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])"
      },
      "email":{
         "type":"string",
         "pattern":"^[^@\\s]+@[^@\\s\\.]+\\.[^@\\.\\s]+$"
      },
      "experiences":{
         "type":"array",
         "minItems" : 0,
         "items":{
            "type":"object",
            "required" : [ "name", "position", "years"],
            "properties":{
               "name":{
                  "type":"string",
                  "minLength": 1
               },
               "position":{
                  "type":"string",
                  "minLength": 1
               },
               "years":{
                  "type":"string",
                  "minLength": 1
               }
            }
         }
      },
      "firstName":{
         "type":"string",
         "minLength": 1
      },
      "id":{
         "type":"string"
      },
      "lastName":{
         "type":"string",
         "minLength": 1
      },
      "phoneNumber":{
         "type":"string",
         "pattern":"[0-9]{9}"
      },
      "photoUrl":{
         "type":"string",
         "pattern":".+\\.(jpeg|png|jpg)"
      },
      "postalCode":{
         "type":"string",
         "pattern":"[0-9]{2}-[0-9]{3}"
      },
      "universities":{
         "type":"array",
         "minItems" : 0,
         "items":{
            "type":"object",
            "required" : [ "degree", "major", "name", "years"],
            "properties":{
               "degree":{
                  "type":"string",
                  "pattern": "lic|in≈º|mgr|dr|prof"
               },
               "major":{
                  "type":"string",
                  "minLength": 1
               },
               "name":{
                  "type":"string",
                  "minLength": 1
               },
               "years":{
                  "type":"string",
                  "minLength": 1
               }
            }
         }
      }
   },
   "$schema":"http://json-schema.org/draft-04/schema#"
}
